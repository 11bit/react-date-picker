row()
  display flex
  flex-flow row
  flex 1

column()
  display flex
  flex-flow column
  flex 1

cell()
  display flex
  align-items center
  justify-content center
  flex 1

.date-picker
  display flex
  flex-flow column
  flex 1 0 auto

  &
  & *
    box-sizing border-box

  .dp-footer
    flex-flow row
    display flex

  .dp-body
    column true

  .dp-table
    size 100%
    column true

  .dp-row
    row true

  .dp-cell
    cell true

  .dp-nav-table
    row true
    width 100%
    .dp-cell
      flex 5
    .dp-cell:first-child
    .dp-cell:last-child
      flex 1